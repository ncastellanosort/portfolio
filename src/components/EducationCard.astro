---
interface Props {
   institution: string;
   startDate: string;
   endDate: String;
   description: String;
   url?: string;
}

const { institution, startDate, endDate, description, url } = Astro.props;
---

<li class="mb-10 ms-4">
   <div
      class="absolute w-3 h-3 bg-zinc-200 rounded-full mt-1.5 -start-1.5 border border-zinc-200 dark:border-zinc-900 dark:bg-zinc-900"
   >
   </div>
   <time
      class="mb-1 text-sm font-normal leading-none text-zinc-900 dark:text-zinc-900"
      >{startDate} - {endDate}</time
   >
   <h3 class="text-xl font-semibold text-zinc-900">
      <a
         href={url}
         target="_blank"
         class="hover:underline hover:decoration-zinc-900">{institution}</a
      >
   </h3>

   <p class="mb-4 text-xl font-normal text-zinc-900">
      {description}
   </p>
</li>
