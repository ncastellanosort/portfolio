---
import Github from "./icons/Github.astro";

interface Props {
   name: string;
   description: string;
   url: string;
}

const { name, description, url } = Astro.props;
---

<div
   class="m-4 py-3 px-5 border border-zinc-900 rounded hover:border-zinc-200 hover:transition-all"
>
   <a href={url} target="_blank">
      <h2 class="font-medium mb-1 md:text-xl">{name}</h2>

      <span class="flex flex-row justify-between items-end">
         <p class="">{description}</p>
         <span class="pt-0.5 pl-1 mb-1.5">{(<Github />)}</span>
      </span>
   </a>
</div>
