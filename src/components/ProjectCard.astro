---
interface Props {
   name: string;
   description: string;
   url: string;
}

const { name, description, url } = Astro.props;
---

<div class="p-4">
   <h2 class="font-medium mb-5 md: text-2xl">{name}</h2>
   <p class="mb-5">{description}</p>
   <a href={url} class="font-semibold" target="_blank">Github</a>
</div>
