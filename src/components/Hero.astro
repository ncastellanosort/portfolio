---
import { basics } from "../cv.json";
import Github from "./icons/Github.astro";
import LinkedIn from "./icons/LinkedIn.astro";
import Mail from "./icons/Mail.astro";
import Phone from "./icons/Phone.astro";
import WorldMap from "./icons/WorldMap.astro";

const { name, label, image, email, phone, location } = basics;
---

<section>
   <div class="grid grid-cols-1 text-left p-4 text-zinc-900 md:grid-cols-2">
      <div>
         <h1 class="text-2xl font-bold md:text-6xl p-4">{name}</h1>
      </div>
      <!-- sm:hidden -->
      <div class="m-auto">
         <figure class="p-4">
            <img src={image} class="rounded-full h-48" />
         </figure>
      </div>
      <div>
         <h2 class="text-1xl font-medium md: text-2xl p-4">{label}</h2>
         <span class="flex p-4">
            <div class="py-0.5">
               {
                  (
                     <a>
                        <WorldMap />
                     </a>
                  )
               }
            </div>
            <div>
               <h2 class="text-xl ml-2">
                  {location}
               </h2>
            </div>
         </span>

         <span class="flex flex-row p-4 space-x-4">
            {
               (
                  <a href={basics.profiles[1].url} target="_blank">
                     {" "}
                     <Github />
                  </a>
               )
            }
            {
               (
                  <a href={basics.profiles[0].url} target="_blank">
                     {" "}
                     <LinkedIn />
                  </a>
               )
            }
            {
               (
                  <a href={`Email: ${email}`} target="_blank" title="hola">
                     {" "}
                     <Mail />
                  </a>
               )
            }
            {
               (
                  <a href={`Phone: ${phone}`} target="_blank" title="hola">
                     {" "}
                     <Phone />
                  </a>
               )
            }
         </span>
      </div>
   </div>
</section>
