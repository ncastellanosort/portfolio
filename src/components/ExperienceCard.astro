---
interface Props {
   name: string;
   position: string;
   endDate: string;
   summary: string;
   url?: string;
}

const { name, position, endDate, summary, url } = Astro.props;
---

<li class="mb-10 ms-4">
   <div
      class="absolute w-3 h-3 bg-zinc-200 rounded-full mt-1.5 -start-1.5 border border-zinc-200 dark:border-zinc-900 dark:bg-zinc-900"
   >
   </div>
   <time
      class="mb-1 text-sm font-normal leading-none text-zinc-900 dark:text-zinc-900"
      >{endDate}</time
   >
   <h3 class="text-xl font-semibold text-zinc-900">
      <a
         href={url}
         target="_blank"
         class="hover:underline hover:decoration-zinc-900">{name}</a
      >
   </h3>

   <h3 class="text-sm font-semibold text-zinc-900">
      {position}
   </h3>

   <p class="mb-4 text-xl font-normal text-zinc-900">
      {summary}
   </p>
</li>
