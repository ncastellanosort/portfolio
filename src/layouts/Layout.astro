---
interface Props {
   title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>{title}</title>
      <style>
         body {
            box-sizing: border-box;
            padding: 0;
            margin: 0;
         }
      </style></head
   >

   <body class="bg-zinc-100">
      <slot />
   </body>
   <footer>
      <div class=" h-16 text-zinc-900 flex items-center justify-center border border-zinc-900">
         <h2 class="text-xl">Made by Nicolas with Astro</h2>
      </div>
   </footer>
</html>
